body {
  font-family: Arial, Helvetica, sans-serif;
  line-height: 1.55em;
  margin: 0;
  padding: 0;
}

header {
  background: #eee;
  border-bottom: 1px solid #ddd;
  padding: 20px 10px;
  text-shadow: 1px 1px 0 #fff;
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  padding: 0;
}

h1 {
  font-size: 1.6em;
}
