<?xml version="1.0" encoding="UTF-8" ?>
<products>
  <% @products.each do |product| %>
    <product id="<%= product.id %>">
      <title><%= product.title %></title>
      <price><%= product.price %></price>
      <description><%= product.description %></description>
    </product>
  <% end %>
</products>